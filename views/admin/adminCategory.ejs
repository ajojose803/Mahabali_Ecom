          <div class="alert alert-success flash-message">
            <p>
              <%= successMessage %>
            </p>
          </div>
          <% } %>
  </div>
  
  <ul class="list-unstyled">
    <li><a href="/admin/dashboard"> <i class="icon-home"></i>Dashboard</a></li>
    <li><a href="/admin/users"> <i class="fa fa-bar-chart"></i>Users</a></li>
