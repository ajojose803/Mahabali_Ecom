<%- include('../partials/userHeader')-%>
<style>
    .wishlist-item {
        display: flex;
        align-items: center;
    }

    .wishlist-item img {
        max-width: 100px;
        margin-right: 20px;
    }
    .anchor{
        color:black ;
    }
</style>

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/"><i class="fa fa-home"></i> Home</a>
                    <span>Wishlist</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- Wishlist Section Begin -->
<section class="shop-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shop__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (wishlist && wishlist.length > 0) { %>
                                <% wishlist.forEach(function(item, index) { %>
                                    <tr data-item-id="<%= item._id %>">
                                        <td class="cart__product__item">
                                            <% if (item.imageUrls && item.imageUrls.length > 0) { %>
                                                <img src="<%= item.imageUrls[0] %>" alt="<%= item.name %>"
                                                style="height: 200px; width: auto;">
                                            <% } else { %>
                                                <img src="/path/to/default-image.jpg" alt="<%= item.name %>">
                                            <% } %>
                                            <div class="cart__product__item__title">
                                             <h6><a class ="anchor" href="/product/<%= item._id %>"><%= item.name %></a></h6>
                                                <div class="rating">
                                                    <% for (let i = 0; i < 5; i++) { %>
                                                        <i class="fa fa-star<%= i < item.rating ? '' : '-o' %>"></i>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="cart__price">â‚¹ <%= item.price %></td>
                                        <td class="cart__close">
                                            <a onclick="confirm('/wishlist/delete/<%= item._id %>')"
                                                class="btn btn-danger"
                                                style="color: white; border-radius: 10px;">x</a>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="3">Your wishlist is empty.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="cart__btn">
                    <a href="/products">Continue Shopping</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Wishlist Section End -->
 <script>
     function confirm(deleteUrl) {
            Swal.fire({
                title: "Are you sure?",
                text: "Are you sure you want to delete this item from your wishlist?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Confirm",
                cancelButtonText: "Cancel",
                dangerMode: true,
            }).then((result) => {
                if (result.isConfirmed) {
                    // Redirect to the delete URL if confirmed
                    window.location.href = deleteUrl;
                } else {
                    console.log("User canceled the deletion.");
                }
            });
        }
 </script>

<%- include('../partials/userFooter')-%>
